<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <rule name="Redirect from Azure domain to custom domain" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions logicalGrouping="MatchAll">
                        <!-- 1. Match subdomain.azurewebsites.net -->
                        <add input="{HTTP_HOST}" pattern=".*\.azurewebsites\.net$" ignoreCase="true" />
                        <!-- 2. Confirm that the environment variable is set (optional) -->
                        <add input="{APPSETTING_REDIRECT_DOMAIN}" pattern=".+" />
                        <!-- 3. Production check (optional) -->
                        <add input="{APPSETTING_ASPNETCORE_ENVIRONMENT}" pattern="^Production$" />
                    </conditions>
                    <action
                            type="Redirect"
                            url="https://{APPSETTING_REDIRECT_DOMAIN}/{R:1}"
                            redirectType="Permanent" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>